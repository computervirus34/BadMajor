        $(function () {
            //Remove the style attributes.
            $(".navbar-nav li, .navbar-nav a, .navbar-nav ul").removeAttr('class');
            $("a.selected").closest("li").addClass("active");
        });
    </script>
    
    <div class="container body-content">
        @RenderBody()
